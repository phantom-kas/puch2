{
  "manifest_version": 3,
  "name": "Zwilt",
  "description": "Zwilt is a free service that lets you grow your followers and connections on social media faster over time. We interact with accounts likely to organically grow your own by simulating human behavior in your browser.",
  "version": "14.3.6",
  "icons": { "512": "./assets/icon.png" },

  "action": {
    "default_icon": "./assets/icon.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "content_scripts": [
    {
      "matches": ["*://*.tiktok.com/*"],
      "js": ["./content/TikTokContentController.js"]
    },
    {
      "matches": ["*://*.tiktok.com/*"],
      "js": ["./content/TikTokContentController.js"]
    },
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["/content/InstagramContent.js"]
    }
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": ["tabs", "storage", "downloads", "scripting", "alarms"],
  "externally_connectable": {
    "matches": ["*://*.instoo.com/*"]
  },
  "host_permissions": [
    "*://*.instagram.com/*",
    "*://*.tinder.com/*",
    "*://*.linkedin.com/*",
    "*://*.pinterest.com/*",
    "*://*.pinterest.co.uk/*",
    "*://*.tiktok.com/*",
    "*://*.facebook.com/*",
    "*://*.twitter.com/*",
    "https://instoo.com/"
  ]
}
